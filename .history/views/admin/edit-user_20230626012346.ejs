<% include ('../layouts/header.ejs') %>

<h1>Edit User</h1>


<form action="" method="post">

    <input type="name"  name="name" placeholder="Enter Name" aria-label="name" value="<%= user.name %>" required>
    <br><br>
    <input type="email"  name="email" placeholder="Enter Email" aria-label="email" value="<%= user.email %>" required>
    <br><br>
    <input type="text"  name="mno" placeholder="Enter Mobile" aria-label="mno" value="<%= user.mobile %>" required >
    <br><br>
    <label>Verified</label>
    <input type="radio" name="verify" value="1" aria-label="verify" <% if(user.is_verified == 1) {%> checked <% } %> >
    <label>Unverified</label>
    <input type="radio" name="verify" value="0" aria-label="verify" <% if(user.is_verified == 0) {%> checked <% } %> >
    <br><br>
    <input type="hidden" name="id" value="">
    <input type="submit"  value="Update User" aria-label="Login">

</form>

<a href="/admin/">Go Dashboard</a>
<% include('../layouts/footer.ejs') %>

