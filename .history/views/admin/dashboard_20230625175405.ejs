<% include("../layouts/header.ejs") %>
<h1>Dashboard</h1>

<a href="/admin/new-user">Add New User</a> 
<br><br>

<table width="50%">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Image</th>
        <th>Verified</th>
    </tr>

    <%
        if(users.length > 0 ){

            for(let i=0; i<users.length; i++){
                %>
                <tr>
                    <td><%= users[i].name %></td> 
                    <td><%= users[i].email %></td> 
                    <td><%= users[i].mobile%></td> 
                    <td><%
                        if(users[i].is_verified == 0){
                           %>
                           <p>Not Verified</p>
                           <% 
                        }else{

                            %>
                            <p>Verified</p>
                            <%

                        }
                         %></td> 
                </tr>
               <%
            }

        }else{
            %>
            <tr>
                <td colspan="5">Users Not Found </td>
            </tr>
            <%
        } 
    
    %>

</table>
<br>

<a href="/admin/home">Go to Home</a> 



